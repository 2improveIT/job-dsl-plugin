<ruleset xmlns="http://codenarc.org/ruleset/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://codenarc.org/ruleset/1.0 http://codenarc.org/ruleset-schema.xsd"
         xsi:noNamespaceSchemaLocation="http://codenarc.org/ruleset-schema.xsd">
    <ruleset-ref path="file:config/codenarc/codenarc.xml">
        <!-- that's OK for test code -->
        <exclude name="ComparisonWithSelf"/>
        <!-- that's OK for test code -->
        <exclude name="ExplicitCallToCompareToMethod"/>
        <!-- that's OK for test code -->
        <exclude name="ExplicitCallToEqualsMethod"/>
        <!-- Spock encourages to violate this rule -->
        <exclude name="MethodName"/>
        <!-- Spock ... -->
        <exclude name="JUnitPublicNonTestMethod"/>
        <!-- TODO: fix violations -->
        <exclude name="JUnitPublicProperty"/>
        <!-- Spock's data tables violate this rule -->
        <exclude name="UnnecessaryBooleanExpression"/>
        <!-- causes false negatives -->
        <exclude name="UnusedObject"/>
    </ruleset-ref>
</ruleset>
